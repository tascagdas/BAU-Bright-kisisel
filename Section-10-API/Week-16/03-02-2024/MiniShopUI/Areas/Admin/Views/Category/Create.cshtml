@model AddCategoryViewModel
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="d-flex justify-content-between mb-2">
                <div>
                    <h1>Yeni Kategori</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <form asp-area="Admin" asp-controller="Category" asp-action="Create" method="post"
                        enctype="multipart/form-data">
                        <!--Ürün Bilgileri-->
                        <div class="card card-success">
                            <div class="card-header">
                                <h3 class="card-title">Kategori Bilgileri</h3>
                            </div>
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label asp-for="Name"></label>
                                            <input asp-for="Name" type="text" class="form-control"
                                                placeholder="Ürün adını giriniz...">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    @* <div class="col-sm-4">
                                    <div class="form-group">
                                    <label asp-for="Price"></label>
                                    <input asp-for="Price" type="text" class="form-control"
                                    placeholder="Ürün fiyatını giriniz...">
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                    </div> *@
                                    <div class="col-sm-4">
                                        <label>Seçenekler</label>
                                        <div class="form-group d-flex">
                                            <div class="icheck-primary">
                                                <input asp-for="IsActive" type="checkbox" />
                                                <label asp-for="IsActive" for="IsActive"></label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-9">
                                        <label asp-for="Description"></label>
                                        <textarea asp-for="Description"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>


@section Styles {
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/admin/plugins/summernote/summernote-bs4.min.css">
}

@section Scripts {
    <!-- Summernote -->
    <script src="~/admin/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $('#Description').summernote({
            height: 100
        })
    </script>
    <script>
        $("#image").on("change", function (e) {
            const selectedFiles = e.target.files;
            $("#image-viewer").attr("src", window.URL.createObjectURL(selectedFiles[0]));
        })
    </script>
}