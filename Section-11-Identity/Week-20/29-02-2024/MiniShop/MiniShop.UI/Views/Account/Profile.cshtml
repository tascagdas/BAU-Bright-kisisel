@model UserProfileViewModel
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form asp-area="" asp-controller="Account" asp-action="Profile" method="post">
                <div class="d-flex justify-content-between align-items-center">
                <h6 class="display-4 text-primary mt-1 mb-2" style="font-size: 30px">Kullanıcı bilgileri</h6>
                <div class="">
                    <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-primary btn-sm"> Şifre değiştir</a>
                </div>
                </div>
                <div class="row">
                    <div class="text-danger col-md-12"
                         asp-validation-summary="All">
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-2">
                            <label class="" asp-for="User.FirstName"></label>
                            <input class="form-control" asp-for="User.FirstName"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-2">
                            <label class="" asp-for="User.LastName"></label>
                            <input class="form-control" asp-for="User.LastName"/>
                        </div>
                    </div>

                    @* --- *@

                    <div class="col-md-12">
                        <div class="form-group mb-2">
                            <label class="" asp-for="User.Address"></label>
                            <textarea class="form-control" asp-for="User.Address"></textarea>
                        </div>
                    </div>

                    @* --- *@

                    <div class="col-md-4">
                        <div class="form-group mb-2">
                            <label class="" asp-for="User.City"></label>
                            <input class="form-control" asp-for="User.City"/>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-2">
                            <label class="" asp-for="User.Gender"></label>
                            <select class="form-control" asp-for="User.Gender">
                                <option value="Kadın">Kadın</option>
                                <option value="Erkek">Erkek</option>
                                <option value="belirtilmedi">Belirtmek İstemiyorum</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-2">
                            <label class="" asp-for="User.UserName"></label>
                            <input class="form-control" asp-for="User.UserName"/>
                        </div>
                    </div>

                    @* --- *@

                    <div class="col-md-4">
                        <div class="form-group mb-2">
                            <label class="" asp-for="User.Email"></label>
                            <input class="form-control" asp-for="User.Email"/>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-2">
                            <label class="" asp-for="User.PhoneNumber"></label>
                            <input class="form-control" asp-for="User.PhoneNumber"/>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-2">
                            <label class="" asp-for="User.DateOfBirth"></label>
                            @{
                                var year = DateTime.Today.Year - 18;
                                var month = DateTime.Today.Month;
                                string monthString = month < 10 ? "0" + month.ToString() : month.ToString();
                                var day = DateTime.Today.Day;
                                string dayString = day < 10 ? "0" + day.ToString() : day.ToString();
                                var maxDate = $"{year}-{monthString}-{dayString}";
                            }
                            <input class="form-control" type="date" min="1900-01-01" max="@maxDate" asp-for="User.DateOfBirth"/>
                        </div>
                    </div>

                    @* --- *@

                </div>
                <button type="submit" class="btn btn-success mt-3 btn-block">Kaydet ve Anasayfaya Dön</button>
            </form>
        </div>
        <div class="col-md-4">
            <h1 class="mt-1 display-4 text-dark mb-2" style="font-size: 30px">Geçmiş siparişler</h1>
            <div class="accordion" id="orderAcordion">
                @foreach (var order in Model.Orders)
                {
                    <div class="card">
                        <div class="card-header"
                             id="title-order-@order.Id">
                            <h2 class="mb-0">
                                <button class="btn btn-block text-left"
                                        type="button"
                                        data-toggle="collapse"
                                        data-target="#order-details-@order.Id"
                                        aria-expanded="true"
                                        aria-controls="order-details-@order.Id">
                                    <div class="row">
                                        <div class="col-md-4">
                                            @order.Id
                                        </div>
                                        <div class="col-md-4">
                                            @order.OrderDate
                                        </div>
                                        <div class="col-md-4 text-right">
                                            @($"{order.TotalPrice:C0}")
                                        </div>
                                    </div>
                                </button>
                            </h2>
                        </div>

                        <div id="order-details-@order.Id"
                             class="collapse"
                             aria-labelledby="title-order-@order.Id"
                             data-parent="#orderAcordion">
                            <div class="card-body">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>Ürün</th>
                                        <th>Birim Fiyat</th>
                                        <th>Adet</th>
                                        <th>Tutar</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var orderDetail in order.OrderDetails)
                                    {
                                        <tr>
                                            <td>
                                                <img src="~/images/products/@orderDetail.Product.ImageUrl" width="30"/>
                                                <span>@orderDetail.Product.Name</span>
                                            </td>
                                            <td>
                                                @($"{orderDetail.Price:C0}")
                                            </td>
                                            <td>
                                                @orderDetail.Quantity
                                            </td>
                                            <td>
                                                @($"{orderDetail.Price * orderDetail.Quantity:C0}")
                                            </td>

                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <hr/>

</div>