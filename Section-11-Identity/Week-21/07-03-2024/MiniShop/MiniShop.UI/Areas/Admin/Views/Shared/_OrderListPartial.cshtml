@model List<AdminOrderViewModel>

@foreach (var order in Model)
{
    <tr>
        <td>@order.Id</td>
        <td>
            @order.OrderDate
        </td>
        <td>
            @order.UserName
        </td>
        <td>@($"{order.TotalPrice:C0}")</td>
        <td>
            <div class="custom-control custom-switch">
                <input onchange="UpdateOrderToPreparing(this,'@order.Id');"
                       type="checkbox"
                       class="custom-control-input"
                       name="orderState"
                       @(order.OrderState=="Hazırlanıyor"?"checked disabled":"")
                       id="OrderStatus-@order.Id">
              <label class="custom-control-label" for="OrderStatus-@order.Id">@order.OrderState</label>
            </div>
        </td>
    </tr>
}
