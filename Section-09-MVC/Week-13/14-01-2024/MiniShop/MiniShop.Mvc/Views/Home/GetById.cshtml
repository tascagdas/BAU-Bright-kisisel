@model ProductViewModel
<div class="card mb-3 w-50 m-auto">
    <div class="row g-0">
        <div class="col-md-4 py-2 ps-2">
            <img src="~/images/@Model.ImageUrl" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Properties</p>
                <p class="card-text">
                    <small class="text-body-secondary">
                        @Model.Price
                    </small></p>
            </div>
        </div>
    </div>
</div>